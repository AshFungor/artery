{
    "name": "debian",
    "build": {
        "context": "${localWorkspaceFolder}",
        "dockerfile": "${localWorkspaceFolder}/.devcontainer/debian/Dockerfile",
        "args": {
            "USER": "devcontainer",
            "OMNETPP_TAG": "omnetpp-5.6.2",
            "SUMO_TAG": "v1_21_0",
            "GEOGRAPHICLIB_TAG": "v2.5"
        }
    },
    "containerUser": "devcontainer",
    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    "mounts": [
        {
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        {
            "source": "artery-debian-persist-conan",
            "target": "/home/devcontainer/.conan2",
            "type": "volume"
        }
    ],
    "initializeCommand": "which xhost 1>/dev/null 2>/dev/null && xhost +local:docker",
    "postStartCommand": "sudo chown -R devcontainer:devcontainer /home/devcontainer/.conan2"
}